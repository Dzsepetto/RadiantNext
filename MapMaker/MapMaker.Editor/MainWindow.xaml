<Window x:Class="MapMaker.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MapMaker.Editor.Views"
        Title="MapMaker Radiant"
        Width="1400"
        Height="900"
        Background="#1e1e1e">

    <DockPanel>

        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Open" Click="Open_Click" />
                <MenuItem Header="Save"/>
            </MenuItem>
        </Menu>

        <!-- Left Tools Panel -->
        <Border DockPanel.Dock="Left"
                Width="200"
                Background="#2a2a2a">
            <StackPanel>
                <Button Content="Select Tool"/>
                <Button Content="Move Tool"/>
                <Button Content="Brush Tool"/>
            </StackPanel>
        </Border>

        <Grid Background="Black">
            <local:ViewportControl x:Name="Viewport"/>
        </Grid>

    </DockPanel>
</Window>